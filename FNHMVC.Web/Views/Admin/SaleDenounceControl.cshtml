@model IEnumerable<FNHMVC.Model.Denounce>

@{
    Layout = "~/Views/shared/_LayoutPrincipal.cshtml";
}

<div id="divUserList">
   <legend>
    <div style="text-align: center;">
        <h2>Denuncias de Ventas</h2>
    </div>
</legend>

<p>
    @Html.ActionLink("Administración", "Menu", "Admin")
</p>

<div class="well">
    <div class="container" style="width: auto;">
    <table class="table table-hover-bordered table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Usuario que denunció</th>
                <th>Venta denunciada</th>
                <th>Razón</th>
                <th>Comentario</th>

                <th title="Cambiar" style="width: 36px;"></th>
            </tr>
        </thead>
        <tbody>

            @{var index = 0;}
            @foreach (var p in Model)
            {
                index++;

                <tr>
                    <td>@index.ToString()</td>

                    <td><a href="/Home/UserProfile/@p.UserDenouncing.UserId">@p.UserDenouncing.FullName</a></td>
                    <td><a href="/Sale/ViewSale/@p.SaleToDenounce.SaleId">@p.SaleToDenounce.Title</a></td>
                    <td>@p.Reason</td>
                    <td>@p.Comment</td>
                    <td>
                        @Html.ActionLink(" ", "SaleDisable", "Admin", new { id = p.SaleToDenounce.SaleId, denounce = p.DenounceId }, new { @class = "icon-lock" })
                        @Html.ActionLink(" ", "IgnoreDenounce", "Admin", new { id = p.DenounceId }, new { @class = "icon-thumbs-down" })
                    </td>
                </tr>
            }

        </tbody>
    </table>
        </div>
</div>
</div>