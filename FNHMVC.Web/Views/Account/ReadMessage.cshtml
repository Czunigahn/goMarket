<legend>Responder mensaje</legend>

<h5>De      :<small> @Model.Seller.FullName </small></h5>
<h5>Para: <small>@Model.User.FullName </small></h5>

<h5>Asunto  : <small>@ViewBag.TheSubject </small></h5>
<h5>Mensaje :<small> @ViewBag.TheMessage </small></h5>


<div class="well">
    <div class="container" style="width: auto;">
        @using (Html.BeginForm("ReplyMessage", "Account"))
        {
   
            <div>
                @Html.HiddenFor(x => x.UserInboxId)
                @Html.HiddenFor(x => x.User)
                @Html.HiddenFor(x => x.Seller)
                @Html.TextBoxFor(x => x.Subject, new { @class = "input-block-level", @placeholder = "Asunto" })
                @Html.TextAreaFor(x => x.Message, new { @class = "input-block-level", @placeholder = "Mensaje", @rows = "10" })

                <label class="checkbox">
                    @Html.CheckBoxFor(x => x.SentEmail) Enviar correo?
                </label>

                <br>
            </div>
            <legend></legend>
            <div style="text-align: right;">
                @Html.ActionLink("Cancelar", "Inbox", "Account", new { @class = "btn" })
                <button type="submit" class="btn btn-primary">Enviar</button>
            </div>
        }
    </div>
</div>
