@model FNHMVC.Web.ViewModels.SaleFormModel

<style>
    body
    {
        padding-top: 60px;
    }
</style>
<link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet" />
<link href="~/Content/bwizard.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap-fileupload.min.css" rel="stylesheet" />

<div class="container">
    <div id="wizard">
        <ol>
            <li>Información de la publicación</li>
            <li>Fotografias</li>
            <li>Videos</li>
            <li>Banner</li>
            <li>Ubicación/Mapa</li>
            <li>Finalizar</li>
        </ol>
        <div id="SaleInfo">


            <div class="editor-label">
                @Html.LabelFor(model => model.Title)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Title, new { @class = "input-block-level" })
                @Html.ValidationMessageFor(model => model.Title)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Description)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Description, new { @rows = "5" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Cost) ($)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Cost)
                @Html.ValidationMessageFor(model => model.Cost)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Quantity)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Quantity)
                @Html.ValidationMessageFor(model => model.Quantity)
            </div>

@*            <div class="editor-label">
                @Html.LabelFor(model => model.Picture)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Picture)
                @Html.ValidationMessageFor(model => model.Picture)
            </div>*@
            
            <div class="editor-label">
                @Html.LabelFor(model => model.CategoryId,"Categoria")
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.CategoryId, Model.Categories, "--Select--")
                @Html.ValidationMessageFor(model => model.CategoryId)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.TookItHome)
            </div>
            <div class="editor-field">
                @Html.CheckBoxFor(model => model.TookItHome)
                @Html.ValidationMessageFor(model => model.TookItHome)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.PostOnFacebook)
            </div>
            <div class="editor-field">
                @Html.CheckBoxFor(model => model.PostOnFacebook)
                @Html.ValidationMessageFor(model => model.PostOnFacebook)
            </div>

            @if (ViewBag.HasSuscriptors == "1")
            {        
                <div class="editor-label">
                    @Html.LabelFor(model => model.SendToSuscriptors)
                </div>
                <div class="editor-field">
                    @Html.CheckBoxFor(model => model.SendToSuscriptors)
                    @Html.ValidationMessageFor(model => model.SendToSuscriptors)
                </div>
            }


        </div>
        <div id="Pictures">
            @*@Html.Partial("_uploadImages")*@
            <p>Esta opción estara disponible luego de crear la publicación</p>
        </div>
        <div id="Videos">
            @*<p>aqui van los videos</p>*@

            <div class="editor-label">
                @Html.LabelFor(model => model.YouTubeLink)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.YouTubeLink)
                @Html.ValidationMessageFor(model => model.YouTubeLink)
            </div>

        </div>

        <div id="Banners">
            <p>Esta opción estara disponible luego de crear la publicación</p>
        </div>

        <div id="mapSale">

            <div class="editor-field">
                @Html.EditorFor(model => model.Latitude)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Altitude)
            </div>

            <div id="map" style="width: auto; height: 480px;"></div>

            @* <div class="accordion" id="accordion2">
                <div class="accordion-group">
                    <div class="accordion-heading">
                        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">Mapa
                        </a>
                    </div>
                    <div id="collapseOne" class="accordion-body collapse in">
                        <div class="accordion-inner">
                            
                        </div>
                    </div>
                </div>
            </div>*@
        </div>
        <div>
            <p>Presione finalizar cuando esta listo/Cancelar para abandornar esta operación</p>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Crear</button>
                @Html.ActionLink("Cancelar", "Index", "Sale", new { @class = "btn " })
            </div>

        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.9.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/bwizard.min.js" type="text/javascript"></script>
<script src="~/Scripts/bootstrap-fileupload.js" type="text/javascript"></script>

<script type="text/javascript">
    $("#wizard").bwizard();
</script>

<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script src="~/Scripts/jquery-1.9.1.js" type="text/javascript"></script>
<script src="~/Scripts/GMap.js" type="text/javascript"></script>


<script type="text/javascript">
    $().ready(function () {
        $('.ui-datepicker').datepicker({
            dateFormat: 'mm/dd/yy',
            buttonImage: '@Url.Content("~/Content/calendar.gif")',
            buttonImageOnly: true,
            showOn: "button"
        });
    });
</script>
